{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb", "airbnb/hooks", "plugin:import/errors", "plugin:import/warnings", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": ["jsx-a11y", "jest"],
  "rules": {
    "camelcase": "error",
    "react/prefer-stateless-function": "off",
    "max-len": ["warn", 180, 2],
    "arrow-parens": "off",
    "import/no-named-as-default": "off",
    "react/forbid-prop-types": "off",
    "jest/no-focused-tests": "error",
    "import/prefer-default-export": "off",
    "react/jsx-props-no-spreading": "error",
    "react/state-in-constructor": "off",
    "jsx-a11y/control-has-associated-label": "warn",
    "react/jsx-curly-newline": "off"
  }
}
